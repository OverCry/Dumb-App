<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reminderCollect"
    tools:context=".ReminderCollect">

    <Button
        android:id="@+id/newReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editReminder"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="150dp"

        android:text="Create new Reminder" />

    <Button
        android:id="@+id/editReminder"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_above="@+id/viewReminders"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="140dp"

        android:text="Edit old Reminder" />

    <Button
        android:id="@+id/viewReminders"
        android:layout_width="wrap_content"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="111dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="290dp"

        android:text="View Reminders" />

</RelativeLayout>